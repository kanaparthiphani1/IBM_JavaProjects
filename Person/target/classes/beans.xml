<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


<bean id="personinfo" class="com.example.demo.Name">
<constructor-arg name="firstName" value="phani"/>
<constructor-arg name="secondName" value="kanaparthi"></constructor-arg>
<constructor-arg name="mobile" value="7263726"></constructor-arg>
<constructor-arg name="address" ref="address"></constructor-arg>

</bean>

<bean id="address" class="com.example.demo.Address">
<property name="firstLine" value="vijayawada"></property>
<property name="secondLine" value="Andhra Pradesh"></property>
</bean>
</beans>
